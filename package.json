{
  "name": "hackergames-launcher",
  "version": "2.0.1",
  "description": "HACKERGAMES Launcher to install and start games created by Minihacker3000",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "extract-zip": "^2.0.1",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.hackergames.hackergameslauncher",
    "productName": "HACKERGAMES Launcher",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "img/app-icon-invert.ico"
    },
    "nsis": {
      "installerIcon": "img/app-icon-invert.ico", 
      "uninstallerIcon": "img/app-icon-invert.ico", 
      "uninstallDisplayName": "HACKERGAMES Launcher",
      "oneClick": false,
      "allowToChangeInstallationDirectory": false
    },
    "files": [
      "index.html",
      "uninstall.html",
      "main.js",
      "renderer.js",
      "preload.js",
      "img/*"
    ]
  }
}
